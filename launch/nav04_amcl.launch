<launch>
    <node pkg="amcl" type="amcl" name="amcl" output="screen">
        <!-- Publish scans from best pose at a max of 10 Hz -->
        <param name="odom_model_type" value="omni"/>
        <remap from="scan" to="scan"/>
        <param name="gui_publish_rate" value="50.0"/>
        <param name="laser_max_range" value="4.5"/>  <!-- 调整为围栏大小 -->
        <param name="laser_max_beams" value="360"/>
        <param name="min_particles" value="100"/>  <!-- 3000  -->
        <param name="max_particles" value="500"/>
        <param name="kld_err" value="0.001"/> <!-- 0.05  -->
        <param name="kld_z" value="0.92"/> <!-- 0.99  -->
        <param name="odom_alpha1" value="0.3"/> <!-- 0.05  -->
        <param name="odom_alpha2" value="0.3"/> <!-- 0.05  -->
        <!-- translation std dev, m -->
        <param name="odom_alpha3" value="0.3"/>
        <param name="odom_alpha4" value="0.3"/>
        <param name="odom_alpha5" value="0.3"/>
        <param name="laser_z_hit" value="0.85"/>
        <param name="laser_z_short" value="0.05"/>
        <param name="laser_z_max" value="0.1"/> <!-- 0.05  -->
        <param name="laser_z_rand" value="0.01"/>  <!-- 0.05  -->
        <param name="laser_sigma_hit" value="0.2"/>
        <param name="laser_lambda_short" value="0.1"/>
        <param name="laser_model_type" value="likelihood_field"/>
        <param name="laser_likelihood_max_dist" value="2.0"/>
        <param name="update_min_d" value="0.1"/>   <!-- 0.05  -->
        <param name="update_min_a" value="0.05"/>
        <!-- 设置坐标系：map odom 机器人基坐标系 -->
        <param name="odom_frame_id" value="odom"/>
        <param name="base_frame_id" value="base_link"/>        <!-- 改 -->

        
        <param name="global_frame_id" value="/map"/>
        <param name="resample_interval" value="2"/>
        <param name="transform_tolerance" value="0.5"/>
        <param name="recovery_alpha_slow" value="0.0001"/>  <!-- 0.001  -->
        <param name="recovery_alpha_fast" value="0.7"/>
        <param name="initial_pose_x" value="0.0"/>
        <param name="initial_pose_y" value="0.0"/>
        <param name="initial_pose_a" value="0.0"/>
    </node>
</launch>